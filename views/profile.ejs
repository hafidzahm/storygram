<body>
  <nav class="bg-white border-gray-200 dark:bg-gray-900">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
          <img src="/assets/storygram-ai.png" class="h-8" alt="Flowbite Logo" />
          <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">StoryGram</span>
      </a>
      <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
          </svg>
      </button>
      <div class="hidden w-full md:block md:w-auto" id="navbar-default">
        <ul class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
          <li>
            <a href="/" class="block py-2 px-3 text-white bg-blue-700 rounded-sm md:bg-transparent md:text-blue-700 md:p-0 dark:text-white md:dark:text-blue-500" aria-current="page">Home</a>
          </li>
          <li>
            <a href="/profiles/<%= profileId %>" class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">Your Profile</a>
          </li>
          <li>
            <a href="/testing" class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">X</a>
          </li>
          <li>
            <a href="/tags" class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">All Tags</a>
          </li>
          <li>
            <a href="/profiles/<%= profileId %>/add" class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">Buat Postingan</a>
          </li>
          <li>
            <a href="/logout" class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent">Log Out</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
<div class="w-full mx-auto ">
  <div class="bg-white dark:bg-gray-800 shadow-lg overflow-hidden transition-colors duration-200 w-full">
    <div class="relative h-48">
      <img src="/assets/madara.jpeg" alt="Cover" class="w-full h-full object-cover">
      <div class="absolute -bottom-12 left-6">
        <img src="/assets/pp.jpg" alt="Profile" class="w-24 h-24 rounded-xl object-cover border-4 border-white dark:border-gray-800 shadow-lg">
      </div>
    </div>

    <div class="pt-16 px-6 pb-6">
      <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
        <div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= data.name %></h1>
          <p class="text-purple-600 dark:text-purple-400">@<%= data.User.username %></p>
        </div>
        <a 
          href="/profiles/profileId/posts/:postId/edit" 
          target="_blank"
          class="inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors duration-200 text-sm font-medium"
        >
          Edit Profile
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>
      <div class="mt-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Email</h2>
        <a 
          href="mailto:abhirajk@example.com" 
          class="inline-flex items-center text-purple-600 dark:text-purple-400 hover:underline"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <%= data.User.email %>
        </a>
      </div>
    </div>
</div>
</div>
<br>
<p class="text-center text-2xl font-bold text-gray-900 dark:text-white">List Postingan Kamu</p>
<br>
<div class="card-container">
    <% data.Posts.forEach(post => { %>
        <div class="card max-w-sm rounded overflow-hidden shadow-lg">
          <a href="/profiles/<%= profileId %>/posts/<%= post.id %>" class="btn btn-primary">
            <img class="w-full" src="<%= post.picturePost %>" alt="Sunset in the mountains">
                </a>
            <!-- <img class="w-full" src="../images/<%= post.picturePost %>" alt="<%= post.titlePost %>"> -->
            <!-- <img class="w-full" src='/im/ages/adad.png' alt="<%= post.titlePost %>"> -->
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2"><%= post.titlePost %></div>
                
                <p class="text-gray-700 text-base">
                    <%= post.captionPost %>
                </p>
                
            </div>
            <!-- < -->
        </div>
    <% }) %>
</div>

<script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
